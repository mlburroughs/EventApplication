@model WebMVC.Models.EventItem




<form asp-controller="Cart" asp-action="AddToCart">
    <img class="esh-catalog-thumbnail" src="@Model.MainEventImageUrl" />
    <input class="esh-catalog-button" type="submit" value="[ ADD TO CART ]" />
    <div class="esh-catalog-name">
        <span>@Model.Name</span>
    </div>
    <div class="esh-catalog-price">
        <span>@Model.Price.ToString("N2")</span>
    </div>
    <input type="hidden" asp-for="@Model.EventType" name="brand" />
    <input type="hidden" asp-for="@Model.EventTypeId" name="brandId" />
    <input type="hidden" asp-for="@Model.EventCategory" name="type" />
    <input type="hidden" asp-for="@Model.EventCategoryId" name="typeId" />
    <input type="hidden" asp-for="@Model.EventMetroCity" name="type" />
    <input type="hidden" asp-for="@Model.EventMetroCityId" name="typeId" />
    <input type="hidden" asp-for="@Model.EventOrganizer" name="type" />
    <input type="hidden" asp-for="@Model.EventOrganizerId" name="typeId" />
    <input type="hidden" asp-for="@Model.Description" name="description" />
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.Name" name="name" />
    <input type="hidden" asp-for="@Model.MainEventImageUrl" name="pictureUrl" />
    <input type="hidden" asp-for="@Model.Price" name="price" />
    <input type="hidden" asp-for="@Model.EventDateTime" name="price" />
    <input type="hidden" asp-for="@Model.RefundPolicy" name="price" />
    <input type="hidden" asp-for="@Model.Tag1" name="price" />
</form>